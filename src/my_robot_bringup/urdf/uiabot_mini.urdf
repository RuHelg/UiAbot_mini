<?xml version="1.0"?>
<robot name="uiabot_mini">

  <!-- Links -->
  <link name="base_link">
    <visual>
      <geometry>
        <mesh filename="package://uiabot_mini_description/meshes/base_link.STL"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <!-- <origin xyz="0 0 0" rpy="0 0 1.5708"/> -->
      <material name="gray">
        <color rgba="0.6 0.6 0.6 1.0"/>
      </material>
    </visual>
  </link>

  <link name="wheel_left_link">
    <visual>
      <geometry>
        <mesh filename="package://uiabot_mini_description/meshes/wheel.STL"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <!-- <origin xyz="0 0 0" rpy="1.5708 1.5708 0"/> -->
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
  </link>

  <link name="wheel_right_link">
    <visual>
      <geometry>
        <mesh filename="package://uiabot_mini_description/meshes/wheel.STL"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <!-- <origin xyz="0 0 0" rpy="1.5708 -1.5708 0"/> -->
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
  </link>

  <!-- Joints -->
  <!-- <link name="world"/> -->

  <!-- <joint name="world_to_base" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.05635" rpy="0 0 0"/>
  </joint> -->

  <joint name="joint_wheel_left" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_left"/>
    <origin xyz="0.00060024 -0.09875 -0.022352" rpy="0 0 0"/>
    <!-- <origin xyz="0.00060024 -0.09875 -0.022352" rpy="1.5708 0 0"/> -->
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="joint_wheel_right" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_right"/>
    <origin xyz="0.00060024 0.09875 -0.022352" rpy="0 1.57080 0"/>
    <!-- <origin xyz="0.00060024 0.09875 -0.022352" rpy="1.5708 0 0"/> -->
    <axis xyz="0 0 1"/>
  </joint>

</robot>
